<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <link rel = "stylesheet" type = "text/css" href="/stylesheets/bootstrap.css">
    </head>
    <body>
        <div class = "container-fluid">
            <div style="backgroud-color:#f1c40f">
                <ul class = "nav navbar-nav">
                    <li><a href = "/">Home</a></li>
                    <li><a href = "/sessions/welcome">Welcome</a></li>
                    <% if (!loggedIn) { %>
                            <li><a href = "/sessions/login">Login</a></li>
                            <li><a href = "/sessions/signup">Sign Up</a></li>
                        <% } else { %>
                            <li><a href = "/sessions/logout">Log Out</a></li>
                            <li><a href = "/profile"><b><%=user.firstname%></b></a></li>
                        <% } %>
                </ul>
            </div>
            <br>
            <br>
            <div class = "row">
                <div class = "col-md-2"></div>
                <div class = "col-md-2"><img class = "img-rounded"></div>
                <div class = "col-md-6">
                    <div class = "page-header"><h1><%= user.firstname %> <%= user.lastname %></h1></div>
                </div>
                <div class = "col-md-2"></div>
            </div>
            <div class = "row">
                <div class = "col-md-2"></div>
                <div class = "col-md-8">
                    <p>
                        <b>Email: </b><%= user.email %>
                    </p>
                    <div class="page-header"><h3>My Formulas</h3></div>
                    <br>
                    <% for (var i = 0; i < user.addedFormulas.length; i++) { %>
                        <a href="/formula/display/<%= user.addedFormulas[i].id %>"><%= user.addedFormulas[i].title %></a>
                        <br>
                    <% } %>
                </div>
                <div class = "col-md-2"></div>
            </div>
        </div>
    </body>
</html>